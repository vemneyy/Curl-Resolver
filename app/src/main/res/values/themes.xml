<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.CurlResolver" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialCardViewStyle">@style/Widget.CurlResolver.MaterialCard</item>
        <item name="materialButtonStyle">@style/Widget.CurlResolver.Button</item>
        <item name="textInputStyle">@style/Widget.CurlResolver.TextInputLayout.Filled</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.CurlResolver.Progress</item>
        <item name="materialDividerStyle">@style/Widget.CurlResolver.Divider</item>
    </style>

    <style name="Theme.CurlResolver" parent="Base.Theme.CurlResolver"/>

    <style name="Widget.CurlResolver.MaterialCard" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="strokeWidth">1dp</item>

    </style>

    <style name="Widget.CurlResolver.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.CurlResolver.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="boxStrokeColor">?attr/colorOutline</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.CurlResolver.TextInputEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.CurlResolver.Progress" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackThickness">10dp</item>
        <item name="trackCornerRadius">10dp</item>
    </style>

    <style name="Widget.CurlResolver.Divider" parent="Widget.Material3.MaterialDivider">
        <item name="thickness">1dp</item>
        <item name="dividerColor">?attr/colorOutlineVariant</item>
        <item name="dividerInsetStart">0dp</item>
        <item name="dividerInsetEnd">0dp</item>
    </style>

</resources>
